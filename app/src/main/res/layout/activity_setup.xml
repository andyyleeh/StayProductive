<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/begin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="begin"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/time_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_marginBottom="63dp"
        android:layout_alignBottom="@+id/num_unlock"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/num_unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_above="@+id/begin_button"
        android:layout_alignStart="@+id/time_indicator"
        android:layout_marginBottom="39dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/time_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="101dp"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>
